
<div style="width:200px;margin-top:20px;margin-left:20px;">
<%= form_with(model: @blog , local: true) do |form|  %>


  
    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
    </p>
   
    <p>
      <%= form.label :description %><br>
      <%= form.text_area :description %>
    </p>
   
    <p>
      <%= form.submit "Edit" %>
    </p>


<% end %>

</div>